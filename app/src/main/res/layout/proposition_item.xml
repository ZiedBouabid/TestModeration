<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    tools:context="com.example.testmoderation.MainActivity">


    <LinearLayout
        android:id="@+id/item_parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:weightSum="100.0">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/proposition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50.0"
            android:fontFamily="@font/charm"
            android:paddingLeft="10dp"
            android:text="zied"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/proposition_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="25.0"
            android:fontFamily="@font/charm"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="2022/11/14"
            android:textColor="@android:color/black"
            android:textSize="10dp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/proposition_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="20.0"
            android:fontFamily="@font/akronim"
            android:text="AcceptÃ©"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>